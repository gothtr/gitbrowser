{
  "name": "gitbrowser-installer",
  "version": "0.1.0",
  "description": "GitBrowser Installer — Fast. Private. Open.",
  "author": "gothtr <https://github.com/gothtr>",
  "homepage": "https://github.com/gothtr/gitbrowser",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win --x64"
  },
  "build": {
    "appId": "com.gothtr.gitbrowser.installer",
    "productName": "GitBrowser Setup",
    "copyright": "Copyright © 2025-2026 gothtr",
    "directories": { "output": "dist" },
    "files": ["main.js", "preload.js", "installer.html"],
    "extraResources": [
      { "from": "../resources/icons/logo-dark-text.png", "to": "logo-dark-text.png" },
      { "from": "../resources/icons/logo-icon.png", "to": "icon.png" },
      { "from": "../resources/icons/app.ico", "to": "app.ico" }
    ],
    "win": {
      "target": [{ "target": "portable", "arch": ["x64"] }],
      "icon": "../resources/icons/app.ico",
      "requestedExecutionLevel": "asInvoker"
    },
    "portable": {
      "artifactName": "GitBrowser-Setup-${version}.exe"
    }
  },
  "devDependencies": {
    "electron": "^35.0.0",
    "electron-builder": "^25.1.8"
  }
}
